<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.startowerstudio.kly.Tasks"
    tools:showIn="@layout/activity_tasks">

    <ImageView
        android:layout_width="163dp"
        android:layout_height="487dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kly_ship_cropped_blue"
        android:contentDescription="@string/ship_description"
        />

    <include layout="@layout/countdown"
        android:id="@+id/countdown"
        android:layout_height="@dimen/countdown_height"
        android:layout_width="match_parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noTasks"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="@string/no_notifications"
        android:textAlignment="center"
        android:textColor="@color/buttonText"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countdown"
        />

    <!--TODO: doesn't scroll all the way to the bottom-->
    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/taskList"
        android:divider="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/countdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <!--<ListView-->
        <!--android:id="@+id/taskList"-->
